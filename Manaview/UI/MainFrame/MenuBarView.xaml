<UserControl x:Class="Manaview.MenuBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Manaview"
             xmlns:Converter="clr-namespace:Manaview.UI.Converter"
             mc:Ignorable="d" 
             Height="30"
             d:DesignHeight="30" d:DesignWidth="1000">
    <Grid Background="{StaticResource titleBarBG}">

        <Menu HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="Transparent">
            <MenuItem Header="파일" Width="114" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center">

                <MenuItem Header="열기" Command="{Binding OpenCommand}" InputGestureText="Ctrl+O" Height="30">
                </MenuItem>

            </MenuItem>
            
            
        </Menu>
        
        
    </Grid>
</UserControl>
